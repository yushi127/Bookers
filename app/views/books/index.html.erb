<div class="m-4">
  <% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrorが発生しました
   <% @book.errors.full_messages.each do |message| %>
     <p><%= message %></p>
   <% end %>
 <% end %>
  <p class="notice"><%= notice %></p>

  <h1>Books</h1>


  <table>
     <tr align="center">
    　 <th>title</th>
    　 <th>body</th>
     </tr>
     <% @books.each do |book| %>
     <tr>
    　　<td class="m-1"><%= book.title %></td>
    　　<td class="m-1"><%= book.body  %></td>
    　　<td> <%= link_to "Show" , book_path(book) ,class:"m-1"%></td>
    　　<td> <%= link_to "Edit" , edit_book_path(book) ,class:"m-1" %></td>
    　　<td> <%= link_to 'Destroy' , book_path(book), method: :delete, data:{ confirm: "Are You sure" },class:"m-1"%></td>
    　</tr>
     <% end %>
  </table>


  <h3>New book</h3>


  <%= form_with(model: @book, local: true) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <p>
      <%= f.submit 'Create Book' %>
    </p>



  <% end %>
</div>