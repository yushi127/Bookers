<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<p class="notice"><%= notice %></p>
<p class="ml-5 mb-4 m-1 "><span class="font-weight-bold">Title:</span> <%= @book.title %></p>
<P class="ml-5 mb-4 m-1"><span class="font-weight-bold">Body:</span><%= @book.body %></P>

<P class="ml-3"><%= link_to "Edit", edit_book_path %> | <%= link_to "Back", books_path %></P>

